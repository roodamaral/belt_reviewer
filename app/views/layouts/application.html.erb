<!DOCTYPE html>
<html>
<head>
  <title>BeltReview</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<nav class="navbar navbar-light bg-light justify-content-between">
  <a class="navbar-brand">Belt Reviewer</a>
  <a class="inline my-2" href="/events">Back to Events</a> 
<% if current_user %>
    <form class="form-inline" action="/sessions/<%=current_user.id%>" method="post">
      <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
      <input class="btn btn-outline-secondary my-2 my-sm-0" type="submit" value="Log Out">
    </form>
<% end %>
  </nav>



<% if flash[:errors] %>
  <% flash[:errors].each do |e| %>
    <%= e %>
  <% end %>
<% end %>
<%= yield %>
</body>
</html>
